act("{gThe SoG Matrix contain:{x", $n, NULL, NULL, TO_CHAR);
char victim;
foreach (victim, char_in_world()) {
        if (is_npc(victim))
                continue;

        string str;
        if (is_immortal(victim))
                str = "{x  [$j] {W$N{x";
        else
                str = "{x  [$j] $N{x";
        act(str, $n, victim->real_level, victim, TO_CHAR);
}
return 0;
