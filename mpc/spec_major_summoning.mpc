if (has_sp($n, "minor_summoning", $rm, $add)) {
	act_char("You already have summoning as your minor magic school", $n);
	return 1;
}
if (!has_sp($n, "class_wizard", $rm, $add)) {
	act_char("You are not even wizard, how can you have major school?", $n);
	return 1;
}

return 0;
