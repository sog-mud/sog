 */

int i;
char smurf;
foreach (smurf, npc_in_world()) {
        if ($n == smurf)
                continue;
 
        if (smurf->vnum >= 101 && smurf->vnum <= 110)
                i++;
}

if (i != 0)
       return 0;
 
act("The last smurf has died.", $n, NULL, NULL, TO_ROOM);
act("Gargamel will be happy to know about it.", $n, NULL, NULL, TO_ROOM);
return 0;
