char victim = get_random_fighting($n);
if (victim == NULL)
        return 0;

act("{C$n releases a lash of iced-filled water from its outstretched hand!{x",
    $n, NULL, NULL, TO_ROOM);
damage($n, victim, number_range(30, 50), NULL, DAM_COLD, DAMF_NONE);
return 0;
