if (is_immortal($N))
        return 0;
 
mob_interpret($n, "smile");
dofun("say", $n, "Welcome to my Armoury!");
dofun("say", $n, "What can I interest you in?");
dofun("say", $n, "I have the finest armour in my store!");
dofun("emote", $n, "beams with pride.");
if (number_percent() < 2)
        dofun("say", $n, "Now it's time to repair the equipment.");
