char victim;
foreach (victim, char_in_room($n->in_room)) {
        if (!is_npc(victim)
        &&  victim->level > $n->level - 5
        &&  victim->level < $n->level + 5
        &&  !is_safe_nomessage($n, victim)
        &&  can_backstab($n)) {
                backstab_char($n, victim);
                return 1;
        }
}
 
return 0;
