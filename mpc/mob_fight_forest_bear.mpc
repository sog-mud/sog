char victim = get_random_fighting($n);
obj claw = get_eq_char($n, WEAR_WIELD);

if (victim == NULL)
        return 0;

act("{W$n spreads its jaws wide and nearly roars you backwards!{x",
    $n, NULL, victim, TO_VICT);
 
int dam;
if (claw != NULL)
        dam = number_range(40, 55);        
else
        dam = number_range(15, 25);        
damage($n, victim, dam, NULL, DAM_SOUND, DAMF_NONE);
return 0;
