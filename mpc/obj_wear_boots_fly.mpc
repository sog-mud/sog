if (is_sn_affected(actor, "fly"))
        return 0;
 
act("As you wear $p on your feet, they hold you up.",
     actor, obj, NULL, TO_CHAR);
act_char("You start to fly.", actor);
 
affect_char(actor, TO_AFFECTS, "fly", actor->level, -2, 0, 0, AFF_FLYING);
return 0;
