if (has_sp($n, "major_abjuration", $rm, $add)) {
	act_char("You already have abjuration as your major magic school", $n);
	return 1;
}

if (!has_sp($n, "class_wizard", $rm, $add)) {
	act_char("You are not even wizard, how can you have magic school?", $n);
	return 1;
}

return 0;
