char victim;
foreach (victim, char_in_room($n->in_room)) {
        if (is_wanted(victim) && can_see($n, victim))
                break;
}
 
if (victim == NULL)
        return 0;
 
act_yell($n, "$lu{$N} is a CRIMINAL!  PROTECT THE INNOCENT!  MORE BLOOOOD!!!",
         victim, NULL);
multi_hit($n, victim, NULL);
return 1;
