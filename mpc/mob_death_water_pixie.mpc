act("{B$n collapses into the water, forming a circle of liquid.{x",
    $n, NULL, NULL, TO_ROOM);

obj wear = get_eq_char($n, WEAR_FINGER_L);
if (wear != NULL
&&  obj_vnum(wear) == 35478)
        return 0;
 
wear = get_eq_char($n, WEAR_FINGER_R);
if (wear != NULL
&&  obj_vnum(wear) == 35478)
        return 0;

obj ring = create_obj(35473, 0);
obj_to_room(ring, char_room($n));
return 0;
