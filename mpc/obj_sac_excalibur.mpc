act("The gods are infuriated!", $n, NULL, NULL, TO_ALL);
int hit = char_hit($n);
damage($n, $n,
       hit - 1 > 1000 ? 1000 : hit - 1,
       NULL, DAM_HOLY, DAMF_SHOW | DAMF_HIT);
set_char_gold($n, 0);
set_char_silver($n, 0);
return 1;
