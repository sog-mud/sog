char victim = char_fighting($n);

if ((get_eq_char($n, WEAR_FINGER_R) != $p &&
     get_eq_char($n, WEAR_FINGER_L) != $p)
||  victim == NULL)
        return 0;

act("An electrical arc sprays from $p.", $n, $p, NULL, TO_ALL);
spellfun_call("lightning breath", NULL, char_level($n), $n, victim);
wait_state($n, 2 * get_pulse("violence"));
return 0;
