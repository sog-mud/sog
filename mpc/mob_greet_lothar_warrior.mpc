if (is_good($N)) {
        dofun("say", $n, "Greetings!");
        social_char("bow", $n, $N);
} else if (is_neutral($N)) {
        mob_interpret($n, "yawn");
        dofun("say", $n, "What have brought you here?");
} else if (is_evil($N)) {
        dofun("say", $n, "You must have an awesome reason to come here.");
        social_char("grin", $n, $N);
}
