int spc_count = spclass_count($n, "weapon", $rm, $add);
act_char("Yo!", $n);
if ((real_char_level($n) < 15 && spc_count > 1)
||  (real_char_level($n) < 35 && spc_count > 2) {
	act_char("You aren't expierenced enough to specialize in other type of weapon.");
	return 1;
}

if (spc_count > 3) {
	act_char("You cannot gain new weapon specializations anymore.", $n);
	return 1;
}

return 0;
