act("$p begins to shine a bright white.", actor, obj, NULL, TO_ALL);
 
int level = actor->level;
int dice_type;
if (level <= 20)
        dice_type = 3;
else if (level <= 30)
        dice_type = 4;
else if (level <= 40)
        dice_type = 5;
else
        dice_type = 6;
obj->v_dice_type = dice_type;
return 0;
