if (is_npc($N)
||  is_immortal($N))
        return 0;
 
if (char_hometown($n) != char_hometown($N))
        dofun("say", $n, "Welcome to my Store, traveler!");
else
        act_say($n, "Welcome to my Store, $N!", $N);
return 0;
