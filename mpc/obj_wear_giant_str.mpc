if (is_sn_affected($n, "giant strength"))
        return 0;
 
act("As you wear $p, you feel your self getting stronger.",
     $n, $p, NULL, TO_CHAR);
act_char("Your muscles seems incredibly huge.", $n);
 
int mod = 1 + ($n->level >= 18) + ($n->level >= 30) + ($n->level >= 45);
affect_char($n, TO_AFFECTS, "giant strength", $n->level, -2, APPLY_STR, mod, 0);
return 0;
