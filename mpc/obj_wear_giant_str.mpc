if (is_sn_affected($n, "giant strength"))
        return 0;
 
act("As you wear $p, you feel your self getting stronger.",
     $n, $p, NULL, TO_CHAR);
act_char("Your muscles seems incredibly huge.", $n);
 
int mod = 1 + (char_level($n) >= 18) + (char_level($n) >= 30) +
          (char_level($n) >= 45);
affect_char($n, TO_AFFECTS, "giant strength", char_level($n), -2,
            APPLY_STR, mod, 0);
