if (number_percent() > $n->level)
        return 0;
 
char victim = $n->fighting;
act("You bite $N!", $n, NULL, victim, TO_CHAR);
act("$n bites $N!", $n, NULL, victim, TO_NOTVICT);
act("$n bites you!", $n, NULL, victim, TO_VICT);
spellfun("poison", NULL, $n->level, $n, victim);
return 0;
