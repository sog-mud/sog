if (number_percent() > char_level($n))
        return 0;
 
char victim = char_fighting($n);
act("You bite $N!", $n, NULL, victim, TO_CHAR);
act("$n bites $N!", $n, NULL, victim, TO_NOTVICT);
act("$n bites you!", $n, NULL, victim, TO_VICT);
spellfun_call("poison", NULL, char_level($n), $n, victim);
return 0;
