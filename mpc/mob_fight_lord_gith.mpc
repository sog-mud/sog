char victim = get_random_fighting($n);
if (victim == NULL)
        return 0;

act("{rWith unparalleled rage, $n summons forth a torrent of acid!{x",
    $n, NULL, NULL, TO_ROOM);

/* damage as in two 'acid blast' */
int dam = 2 * dice(char_level($n), 12);
damage($n, victim, dam, NULL, DAM_ACID, DAM_F_NONE);
return 0;
