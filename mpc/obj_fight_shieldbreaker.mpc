char victim = char_fighting($n);
obj shield = get_eq_char(victim, WEAR_SHIELD);
 
if (shield == NULL)
       return 0;
 
act("You {Wcleaved{x $N's $p into two.", $n, shield, victim, TO_CHAR);
act("$n {Wcleaved{x your $p into two.", $n, shield, victim, TO_VICT);
act("$n {Wcleaved{x $N's $p into two.", $n, shield, victim, TO_NOTVICT);
extract_obj(shield, 0);
return 0;
